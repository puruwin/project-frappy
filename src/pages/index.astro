---
import "@fontsource/public-sans/700.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/jetbrains-mono";
import "@fontsource-variable/montserrat";
import "~/styles/index.css";
import "~/styles/title.css";
import WavyDivider from "../components/WavyDivider.astro";
import BrutalHeader from "../components/BrutalHeader.astro";
import PricingPlans from "../components/PricingPlans.astro";
import FAQSection from "../components/FAQSection.astro";
import Hero from "../components/Hero.astro";
import AvailableSlots from "../components/AvailableSlots.astro";
import ContactModal from "../components/ContactModal.astro";
import About from "../components/About.astro";
import Footer from "../components/Footer.astro";

const { generator, site } = Astro;
const image = new URL("creative-launch.jpg", site);
const title = "Frappé | Agencia de Desarrollo Web";
const description = 
  "Creamos sitios web de alto rendimiento que impulsan el crecimiento de tu negocio. Expertos en desarrollo web con tecnologías modernas y diseños adaptados a tu marca.";
const keywords = 
  "desarrollo web, diseño web, agencia digital, sitios web rápidos, desarrollo frontend, landing pages, SEO, diseño personalizado";
---

<!doctype html>
<html lang="es" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <!-- SEO básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={site} />
    
    <!-- Control de robots -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Frappé" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={site} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Metadatos adicionales -->
    <meta name="author" content="Frappé" />
    <meta name="theme-color" content="#000000" />
    <meta name="format-detection" content="telephone=no" />
    
    <!-- Precargar recursos críticos -->
    <link 
      rel="preload" 
      href="/fonts/JetBrainsMono-Variable.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin 
    />
    
    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Frappé",
        "url": "${site}",
        "logo": "${site}/favicon.svg",
        "description": "${description}",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "ES"
        },
        "sameAs": [
          "https://twitter.com/frappe",
          "https://linkedin.com/company/frappe"
        ]
      }
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <BrutalHeader title="Frappé" />
    <Hero />
    <WavyDivider id="sobre-nosotros" topColor="#a8e6cf" bottomColor="#fceecf" />
    <About />
    <WavyDivider id="precios" topColor="#fceecf" bottomColor="#78c7e7" />
    <div class="bg-secondary">
      <AvailableSlots slots={9} />
      <PricingPlans />
    </div>
    <WavyDivider id="faq" topColor="#78c7e7" bottomColor="#a8e6cf" />
    <FAQSection />
    <ContactModal />
    <WavyDivider topColor="#a8e6cf" bottomColor="#000000" />
    <Footer />
  </body>
</html>
