---
export interface Props {
  href: string;
  title: string;
  description?: string;
  icon?: string;
  external?: boolean;
  featured?: boolean;
}

const {
  href,
  title,
  description,
  icon,
  external = true,
  featured = false,
} = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  rel={external ? "noopener noreferrer" : undefined}
  class:list={[
    "focus:ring-primary/20 group relative block w-full rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition-all duration-300 hover:scale-[1.02] hover:border-gray-300 hover:shadow-md focus:border-primary focus:outline-none focus:ring-2 dark:border-gray-700 dark:bg-gray-800 dark:hover:border-gray-600",
    {
      "border-primary/30 from-primary/5 to-secondary/5 dark:border-primary/50 dark:bg-primary/10 bg-gradient-to-r":
        featured,
    },
  ]}
  tabindex="0"
  aria-label={`Enlace a ${title}${description ? `: ${description}` : ""}`}
>
  <div class="flex items-center space-x-4">
    {
      icon && (
        <div
          class:list={[
            "flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg text-white",
            {
              "group-hover:from-primary/90 group-hover:to-secondary/90 bg-gradient-to-r from-primary to-secondary":
                featured,
              "group-hover:from-primary/80 group-hover:to-secondary/80 bg-gradient-to-r from-gray-600 to-gray-700":
                !featured,
            },
          ]}
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d={
                icon === "website"
                  ? "M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3s-4.5 4.03-4.5 9 2.015 9 4.5 9z M8 12l4-4 4 4m-4-4v9"
                  : icon === "email"
                    ? "M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    : icon === "chat"
                      ? "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                      : icon === "calendar"
                        ? "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        : icon === "blog"
                          ? "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                          : "M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
              }
            />
          </svg>
        </div>
      )
    }

    <div class="min-w-0 flex-1">
      <h3
        class:list={[
          "font-semibold text-gray-900 text-lg group-hover:text-primary dark:text-white dark:group-hover:text-primary",
          {
            "text-primary dark:text-primary": featured,
          },
        ]}
      >
        {title}
      </h3>
      {
        description && (
          <p class="mt-1 text-gray-600 text-sm dark:text-gray-300">
            {description}
          </p>
        )
      }
    </div>

    <div class="flex-shrink-0">
      <svg
        class="h-5 w-5 text-gray-400 transition-transform duration-300 group-hover:translate-x-1 group-hover:text-secondary dark:text-gray-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</a>
