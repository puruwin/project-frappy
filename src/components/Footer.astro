---
interface Props {
  navItems?: Array<{
    text: string;
    url: string;
  }>;
}

const { navItems = [
  { text: "Sobre nosotros", url: "/#sobre-nosotros" },
  { text: "Precios", url: "/#precios" },
  { text: "Preguntas frecuentes", url: "/#faq" }
] } = Astro.props;
---

<footer class="bg-black text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo y descripción -->
      <div class="text-center md:text-left">
        <img src="/frappe_icon.svg" alt="Frappy Logo" class="h-12 mx-auto md:mx-0 mb-4" />
        <p class="text-sm text-white/80">
          Desarrollo web profesional en Benidorm. Creamos sitios web rápidos, seguros y optimizados para SEO.
        </p>
      </div>

      <!-- Enlaces de navegación -->
      {navItems.length > 0 && (
        <div class="md:text-left text-center">
          <h3 class="font-bold mb-4">Navegación</h3>
          <ul class="space-y-2">
          {navItems.map((item) => (
            <li>
              <a href={item.url} class="text-white/80 hover:text-[var(--color-primary)] transition-colors">
                {item.text}
              </a>
            </li>
          ))}
          </ul>
        </div>
      )}

      <!-- Contacto -->
      <div class="text-center md:text-left">
        <h3 class="font-bold mb-4">Contacto</h3>
        <ul class="space-y-2">
          <li>
            <a href="tel:+34608962213" class="text-white/80 hover:text-[var(--color-secondary)] transition-colors">
              +34 608 962 213
            </a>
          </li>
          <li>
            <a href="mailto:frappecreativity@gmail.com" class="text-white/80 hover:text-[var(--color-secondary)] transition-colors">
              frappecreativity@gmail.com
            </a>
          </li>
          <li>
            <a href="https://wa.me/+34608962213" target="_blank" class="text-white/80 hover:text-[var(--color-secondary)] transition-colors">
              WhatsApp
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-white/10 text-center text-sm text-white/60">
      <p>&copy; {new Date().getFullYear()} Frappé. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

<script>
  import { trackButtonClick } from '../utils/analytics';

  document.querySelectorAll('footer a').forEach(link => {
    link.addEventListener('click', () => {
      trackButtonClick('footer_link', link.getAttribute('href') || '');
    });
  });
</script> 