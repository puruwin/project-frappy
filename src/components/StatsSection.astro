---
export interface Stat {
  label: string;
  value: string;
  icon?: string;
}

export interface Props {
  stats: Stat[];
  title?: string;
}

const { stats, title = "EstadÃ­sticas" } = Astro.props;

const getIconPath = (icon: string): string => {
  const icons: Record<string, string> = {
    projects:
      "M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z",
    clients:
      "M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H16c-.8 0-1.54.37-2 .97L12 11l-2-2.03A2.51 2.51 0 0 0 8 8H5.46c-.8 0-1.51.59-1.42 1.37L6.5 16H9v6h2v-6h2v6h4z",
    experience:
      "M12 2l3.09 6.26L22 9l-5 4.74L18.18 21 12 17.77 5.82 21 7 13.74 2 9l6.91-.74L12 2z",
    rating:
      "M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z",
  };
  return icons[icon] || icons.projects;
};
---

{
  stats && stats.length > 0 && (
    <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
      {title && (
        <h2 class="mb-4 text-center font-semibold text-gray-900 text-lg dark:text-white">
          {title}
        </h2>
      )}

      <div class="grid grid-cols-2 gap-4">
        {stats.map((stat) => (
          <div class="space-y-2 text-center">
            {stat.icon && (
              <div class="flex justify-center">
                <div class="bg-primary/10 dark:bg-primary/20 flex h-8 w-8 items-center justify-center rounded-lg">
                  <svg
                    class="h-4 w-4 text-primary dark:text-primary"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d={getIconPath(stat.icon)} />
                  </svg>
                </div>
              </div>
            )}

            <div class="space-y-1">
              <div class="font-bold text-gray-900 text-2xl dark:text-white">
                {stat.value}
              </div>
              <div class="text-gray-600 text-sm dark:text-gray-300">
                {stat.label}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  )
}
