---
export interface Props {
  name: string;
  title?: string;
  bio?: string;
  avatar?: string;
  location?: string;
}

const {
  name,
  title,
  bio,
  avatar = "/default-avatar.jpg",
  location,
} = Astro.props;
---

<div class="space-y-6 text-center">
  <!-- Avatar -->
  <div class="relative mx-auto h-32 w-32">
    <img
      src={avatar}
      alt={`Foto de perfil de ${name}`}
      class="ring-gradient-to-r ring-primary/20 dark:ring-primary/40 h-full w-full rounded-full object-cover shadow-lg ring-4"
      loading="eager"
    />
    <div
      class="absolute bottom-2 right-2 h-6 w-6 rounded-full bg-secondary ring-2 ring-white dark:ring-gray-800"
    >
    </div>
  </div>

  <!-- Name and Title -->
  <div class="space-y-2">
    <h1 class="font-bold text-gray-900 text-3xl dark:text-white">
      {name}
    </h1>
    {
      title && (
        <p class="font-medium text-primary text-lg dark:text-primary">
          {title}
        </p>
      )
    }
    {
      location && (
        <div class="flex items-center justify-center space-x-1 text-gray-600 dark:text-gray-300">
          <svg
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span class="text-sm">{location}</span>
        </div>
      )
    }
  </div>

  <!-- Bio -->
  {
    bio && (
      <div class="mx-auto max-w-md">
        <p class="leading-relaxed text-gray-600 dark:text-gray-300">{bio}</p>
      </div>
    )
  }
</div>
